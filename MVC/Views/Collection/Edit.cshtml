@model CactusUpdateDto

@{
    ViewData["Title"] = "Edit cactus";
}

<h1>Edit cactus</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="mb-3">
                <label for="genus" class="control-label">Genus</label>
                <input id="genus" class="form-control" value="@Model.Species.Genus.Name" disabled />
            </div>
            <div class="mb-3">
                <label for="species" class="control-label">Species</label>
                <input id="species" class="form-control" value="@Model.Species.Name" disabled />
                <input type="hidden" name="Species.Id" value="@Model.Species.Id" />
            </div>
            <div class="mb-3 form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="ForSale" /> For sale
                </label>
            </div>
            <div class="mb-3">
                <label asp-for="SowingDate" class="control-label">Sowing date</label>
                <input type="date" asp-for="SowingDate" class="form-control" />
                <span asp-validation-for="SowingDate" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="PotSize" class="control-label">Pot size</label>
                <div class="input-group">
                    <input asp-for="PotSize" class="form-control" />
                    <span class="input-group-text">cm</span>
                </div>
                <span asp-validation-for="PotSize" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Amount" class="control-label">Amount</label>
                <div class="input-group">
                    <input asp-for="Amount" class="form-control" />
                    <span class="input-group-text">pcs</span>
                </div>
                <span asp-validation-for="Amount" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Note" class="control-label">Note</label>
                <textarea asp-for="Note" class="form-control"></textarea>
                <span asp-validation-for="Note" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label class="control-label">Photo</label>
                <input type="file" name="photo" class="form-control" />
            </div>
            <div class="mb-3">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to my collection</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
