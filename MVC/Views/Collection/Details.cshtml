@model CactusDto

@{
    ViewData["Title"] = "Details";
}
@{
    String imgSrc = null;
    if (Model.Image != null)
    {
        var base64 = Convert.ToBase64String(Model.Image);
        imgSrc = String.Format("data:image/png;base64,{0}", base64);
    }
}
<h1>Details</h1>

<div>
    <h4>Cactus</h4>
    <hr />
    <img src="@imgSrc" width="300"/>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Owner)
        </dt>
        <dd class="col-sm-10">
            @Model.Owner.FirstName @Model.Owner.LastName
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Species)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Species.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ForSale)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ForSale)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SowingDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SowingDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PotSize)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PotSize)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Amount)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Amount)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Note)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Note)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
